        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search..." name="search" aria-label="search" style="display: none;">
                    <button type="submit" style="background: none;" class=""><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="">
                <!-- <i class='bx bxs-bell'></i> -->
                <span class=""></span>
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Banners</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/admin/banners">Banners</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/admin/banners">Banner management</a>
                        </li>

                    </ul>
                </div>
                <a href="/admin/add_banner" class="btn-download">
                    <i class='bx bx-image-add'></i>
                    <span class="text">Add new Banner</span>
                </a>
            </div>
            <div class="table-data" style="padding: 10px;">
                <div class="order">
                    <nav style="overflow: hidden;">
                        <form action="" style="margin-left: 439px;margin-bottom: 18px;">
                            <div class="form-input">
                                <input type="search" placeholder="Search..." name="search" aria-label="search" autocomplete="off">
                                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                            </div>
                        </form>
                    </nav>
                    <section style="padding-bottom: 60px; border-radius: 30px;">
                        <div class="container py-5">
                            <div class="row" style="padding: 20px;  line-height: 40px; display: flex; justify-content: center;">
                                <div class="col-lg-4" style="padding: 20px; padding-bottom: 20px;">

                                    <div class="card mb-4">
                                        <% for(let i=0 ; i< banner.length;i++){%>

                                            <div class="slideshow-container">
                                                <div class="mySlides fade">
                                                    <div class="numbertext">
                                                        <%= [i] %> /
                                                            <%= banner.length %>
                                                    </div>
                                                    <img src="/banner_img/<%= banner[i].image %>" style="width:100%">
                                                    <div class="textbanner">
                                                        <a href="/admin/edit_banner?id=<%= banner[i]._id %>" style="text-decoration: none; font-size: 23px; font-weight: 600; color: #ffffff; -webkit-text-stroke: 1px;">
                                                            <%= banner[i].title %>
                                                        </a>
                                                    </div>
                                                </div>

                                                <!-- Next and previous buttons -->
                                                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                                <a class="next" onclick="plusSlides(1)">&#10095;</a>
                                            </div>
                                            <%  } %>
                                                <br>

                                    </div>

                                </div>
                            </div>
                            <table class="table align-middle mb-0 bg-white">
                                <thead class="bg-light">
                                    <tr>
                                        <th>No.</th>
                                        <th></th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(banner.length > 0){
                                for(let i=0 ;i < banner.length;i++){
                                    %>
                                        <tr>
                                            <td>
                                                <p style="margin-top: 12px; font-weight: 600;">
                                                    <%= i+1 %>
                                                </p>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="/banner_img/<%= banner[i].image %>" alt="" style="width: 45px; height: 45px" class="rounded-circle" />
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="ms-3">
                                                        <p class="fw-bold mb-1">
                                                            <%= banner[i].title %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="fw-normal mb-1">
                                                    <%= banner[i].description %>
                                                </p>

                                            </td>

                                            <td>
                                                <button style=" border: none; background: transparent;"><a href="/admin/edit_banner?id=<%= banner[i]._id %>" style="text-decoration: none;"><span class="status more">View</span></a></button>
                                            </td>
                                            <td>
                                                <button style=" border: none; background: transparent;"><a onclick="removeBanner('<%= banner[i]._id%>')" ><span class="status remove">Remove</span></a></button>
                                            </td>
                                        </tr>
                                        <%
                        }
                    }else{
                        %>
                                            <tr>
                                                <td colspan="5">
                                                    <p>Banners Not Found</p>
                                                </td>
                                            </tr>
                                            <%
                    }
                    %>
                                </tbody>
                            </table>
                        </div>
                </div>
            </div>
            </div>
            </section>
            </div>
            </div>
        </main>
    </section>
    <script>
        function removeBanner(bannerId) {
            Swal.fire({
                title: 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/admin/remove_banner?id=' + bannerId
                }
            })
        }
    </script>
    <%- include('../adminlayouts/adminfooter.ejs') %>