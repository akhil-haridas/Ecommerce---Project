    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="">
                <div class="form-input">
                    <input type="search" placeholder="Search..." name="search" aria-label="search" style="display: none;">
                    <button type="submit" class="search-btn" style="background: none;"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="" class="">
                <!-- <i class='bx bxs-bell'></i> -->
                <span class=""></span>
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Coupons</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/admin/coupons">Coupons</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/admin/coupons">Coupons Management</a>
                        </li>
                    </ul>
                </div>
                <a href="/admin/add_coupon" class="btn-download">
                    <i class='bx bx-plus-circle'></i>
                    <span class="text">Add Coupen</span>
                </a>
            </div>
            <div class="table-data">
                <div class="order">
                    <nav style="overflow: hidden;">
                        <form action="" style="margin-left: 439px;margin-bottom: 18px;">
                            <div class="form-input">
                                <input type="search" placeholder="Search..." name="search" aria-label="search" autocomplete="off">
                                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                            </div>
                        </form>
                    </nav>
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>No.</th>
                                <th>Coupon name</th>
                                <th>Discount</th>
                                <th>Max Discount</th>
                                <th>Min Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(coupon.length > 0){
                                for(let i=0 ;i < coupon.length;i++){
                                    %>
                                <tr>
                                    <td>
                                        <p style=" font-weight: 600;">
                                            <%= i+1 %>
                                        </p>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1" style="font-weight: 600;">
                                                    <%= coupon[i].coupon %>
                                                </p>


                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fw-normal mb-1">
                                            <%= coupon[i].discountPercentage %>%</p>

                                    </td>
                                    <td>
                                        <%= coupon[i].maxDiscount %>
                                    </td>
                                    <td>
                                        <%= coupon[i].minAmount %>
                                    </td>
                                    <td>
                                        <button style=" border: none; background: transparent;"><a onclick="removeCoupon('<%=coupon[i]._id%>')"><span class="status remove">Remove</span></a></button>
                                    </td>
                                </tr>
                                <%
                        }
                    }else{
                        %>
                                    <tr>
                                        <td colspan="5">
                                            <p>Coupons Not Found</p>
                                        </td>
                                    </tr>
                                    <%
                    }
                    %>
                        </tbody>
                    </table>
                </div>
        </main>
        <!-- MAIN -->
    </section>
    <script>
        function removeCoupon(couponId) {
            Swal.fire({
                title: 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/admin/remove_coupon?id=' + couponId
                }
            })
        }
    </script>
