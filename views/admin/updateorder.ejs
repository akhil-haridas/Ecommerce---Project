    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search..." name="search" aria-label="search" style="display: none;">
                    <button type="submit" style="background: none;" class=""><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="">
                <!-- <i class='bx bxs-bell'></i> -->
                <span class=""></span>
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Orders</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/admin/orders">Orders</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a href="/admin/orders">Order Management</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/admin/orders">Update status</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="table-data" style="padding: 10px;">
                <div class="order">
                    <div class="formbold-main-wrapper">
                        <div class="formbold-form-wrapper">
                            <form action="" method="post" style="margin-left: -130px; margin-right: -130px; margin-top: -30px;">
                                <div class="formbold-input-flex">
                                    <div>
                                        <input type="text" value="<%= order._id %>" id="firstname" placeholder="" class="formbold-form-input" disabled/>
                                        <label for="firstname" class="formbold-form-label">Order ID</label>
                                    </div>
                                    <div>
                                        <input type="text" value="<%= userData.name%>" id="lastname" placeholder="" class="formbold-form-input" disabled/>
                                        <label for="lastname" class="formbold-form-label">User name</label>
                                    </div>
                                </div>

                                <div class="formbold-input-flex">
                                    <div>
                                        <input type="text" value="<%= order.date %>" id="email" placeholder="" class="formbold-form-input" disabled />
                                        <label for="email" class="formbold-form-label">Date</label>
                                    </div>
                                    <div>
                                        <input type="text" value="<%= order.time%>" id="phone" placeholder="" class="formbold-form-input" disabled/>
                                        <label for="phone" class="formbold-form-label">Time</label>
                                    </div>
                                </div>
                                <div class="formbold-input-flex">
                                    <div>
                                        <input type="text" value="<%= order.total %>" id="email" placeholder="" class="formbold-form-input" disabled />
                                        <label for="email" class="formbold-form-label">Total Amount</label>
                                    </div>
                                    <div>
                                        <input type="text" value="<%= order.paymentMethod %>" id="phone" placeholder="" class="formbold-form-input" disabled/>
                                        <label for="phone" class="formbold-form-label">Payment Method</label>
                                    </div>
                                </div>
                                <div class="formbold-input-flex">

                                    <div>
                                        <%if(order.orderStatus != "Cancelled" && order.orderStatus != "Returned" && order.orderStatus != "Delivered"){%>
                                            <select style="margin-top: 12px; border: none; background: transparent;" name="order">
                                           
              <option value=""><%= order.orderStatus %></option>
              <option class="formbold-form-input">Placed</option>
              <option class="formbold-form-input">Shipping</option>
              <option class="formbold-form-input">Pending</option>
              <option class="formbold-form-input">Out for delivery</option>
              <option class="formbold-form-input">Delivered</option>
                </select>
                                            <%}else if(order.orderStatus == "Returned"){%>
                                                <p style="color: red;">Oder Returned</p>
                                                <%}else if(order.orderStatus=="Delivered" ){%>
                                                    <p style="color: rgb(10, 151, 3);">Oder Delivered</p>
                                                    <%}else{%>
                                                        <p style="color: red;">Oder Cancelled by user</p>
                                                        <%}%>
                                                            <label for="email" class="formbold-form-label">Order Status</label>
                                    </div>
                                    <div>
                                        <%if(order.orderStatus !="Delivered" && order.orderStatus != "Returned"){%>
                                            <p style="color: rgb(6, 152, 6);">
                                                <%= order.paymentStatus %>
                                            </p>

                                            <%}else if(order.orderStatus =="Returned" ){%>
                                                <p style="color: rgb(255, 0, 0);">
                                                    <%= order.paymentStatus %>
                                                </p>
                                                <%}else{%>
                                                    <p style="color: rgb(6, 152, 13);">
                                                        <%= order.paymentStatus %>
                                                    </p>
                                                    <%}%>
                                                        <label for="email" class="formbold-form-label">Payment Status</label>
                                    </div>
                                </div>
                                <div class="formbold-textarea">
                                    <textarea rows="6" maxlength="" name="description" id="message" class="formbold-form-input" autocomplete="off">Name      : <%=address[0]%>
Mobile    : <%=address[1]%>
Home      : <%=address[2]%>
Street    : <%=address[3]%>
City      : <%=address[4]%>
Zip code  : <%=address[5]%>
District  : <%=address[6]%>
State     : <%=address[7]%>
Country   : <%=address[8]%>
            </textarea>
                                    <label for="message" class="formbold-form-label">Shipping Address </label>
                                </div>


                        </div>
                    </div>
                    <div class="card" style="display: none;" id="my-div">
                        <div class="order-list">
                            <table>
                                <thead class="order-list__header">
                                    <tr>
                                        <th>Image</th>
                                        <th class="order-list__column-label" colspan="2">Product</th>
                                        <th class="order-list__column-quantity">Qty</th>
                                        <th class="order-list__column-total">Total</th>

                                    </tr>
                                </thead>
                                <tbody class="order-list__products">
                                    <% for(let i=0 ;i <order.products.length;i++){%>
                                        <tr>
                                            <td class="order-list__column-image">
                                                <div class="product-image">
                                                    <a href="" class="product-image__body"><img class="product-image__img" src="/products_img/<%=order.products[i].productId.image[1]%>" alt="" style="width: 100px; height: 135px; border-radius: 0%;"></a>
                                                </div>
                                            </td>
                                            <td>
                                                <%=order.products[i].productId.name%>
                                                    <br> <span>Color :
                                                        <%=order.products[i].productId.color%> &emsp; Size :
                                                            <%=order.products[i].productId.size%> &emsp; Price:
                                                            <%=order.products[i].productId.offerPrice%>
                                                                </span>
                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                                <%=order.products[i].quantity%>
                                            </td>
                                            <td>
                                                <%=order.products[i].price%>
                                            </td>
                                        </tr>
                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <input type="hidden" name="orderid" value="<%= order._id %>">
                    <button type="button" class="formbold-btn" id="toggle-btn">Show products</button>
                    <%if(order.orderStatus !="Cancelled" && order.orderStatus !="Returned" && order.orderStatus !="Delivered"){%>
                        <button type="submit" style="margin-left: 25px;" class="formbold-btn">Apply Changes</button>
                        <% } %>

                            </form>

                </div>
            </div>


    </section>
    </div>
    </div>
    </main>
    </section>
    <script>
        var button = document.getElementById("toggle-btn");
        var div = document.getElementById("my-div");

        button.addEventListener("click", function() {
            if (div.style.display === "none") {
                div.style.display = "block";
            } else {
                div.style.display = "none";
            }
        });
    </script>
    <%- include('../adminlayouts/adminfooter.ejs') %>