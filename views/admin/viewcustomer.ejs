    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search..." name="search" aria-label="search" style="display: none;">
                    <button type="submit" style="background: none;" class=""><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="">
                <!-- <i class='bx bxs-bell'></i> -->
                <span class=""></span>
            </a>
            <!-- <a href="#" class="profile">
                <img src="">
            </a> -->
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Customers</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/admin/home">Customers</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="" href="/admin/customers">Customer management</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/admin/overview">Overview Customer</a>
                        </li>
                    </ul>
                </div>
                <!-- <a href="#" class="btn-download">
                    <i class='bx bxs-cloud-download'></i>
                    <span class="text">Download PDF</span>
                </a> -->
            </div>
            <div class="table-data" style="padding: 10px;">
                <div class="order">
                    <div class="head">
                        <p style="font-size: 20px;">about&emsp;<span style="font-size: 30px; color: #3C91E6; text-transform: uppercase; font-weight: bolder;"><%= user.name %></span></p>
                    </div>
                    <section style="padding-bottom: 60px; border-radius: 30px;">
                        <div class="container py-5">
                            <div class="row" style="padding: 20px;  line-height: 40px; display: flex; justify-content: center;">
                                <div class="col-lg-4" style="padding: 20px; padding-bottom: 20px;">
                                    <div class="card mb-4">
                                        <div class="card-body text-center">
                                            <%if(user.image){%>
                                                <img src="/userimg/<%=user.image%>" class="rounded-circle mb-3" style="width: 150px; border-radius: 80px;" alt="Avatar" />
                                                <%}else{%>
                                                    <img src="https://mdbcdn.b-cdn.net/img/new/avatars/8.webp" class="rounded-circle mb-3" style="width: 150px; border-radius: 80px;" alt="Avatar" />
                                                    <%}%>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="card mb-4">
                                    <div class="card-body" style="padding-left: 50px; line-height: 45px;">
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bolder; font-size: 20px;">
                                                <p class="mb-0">Full Name</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <%= user.name %>
                                                </p>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bolder; font-size: 20px;">
                                                <p class="mb-0">Email</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <%= user.email %>
                                                </p>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bolder; font-size: 20px;">
                                                <p class="mb-0">Mobile</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <%= user.mobile %>
                                                </p>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bolder; font-size: 20px;">
                                                <p class="mb-0">Joined</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <%= user.date %>
                                                </p>
                                            </div>
                                        </div>
                                        <hr>
                                        <%if(user.address.length !=0 ){%>
                                            <div class="row">
                                                <div class="col-sm-3" style="font-weight: bolder; font-size: 20px;">
                                                    <p class="mb-0">Address</p>
                                                </div>
                                                <div class="col-sm-9">
                                                    <p class="text-muted mb-0">Name:
                                                        <%= user.address[0].name %><br>Mobile:
                                                            <%= user.address[0].mobile %><br>Home:
                                                                <%= user.address[0].home %><br>Street:
                                                                    <%= user.address[0].street %><br>City:
                                                                        <%= user.address[0].city %><br> District:
                                                                            <%= user.address[0].district %><br>State:
                                                                                <%= user.address[0].state %><br>Country:
                                                                                    <%= user.address[0].country %><br>Pincode:
                                                                                        <%= user.address[0].zip %><br>

                                                    </p>
                                                </div>
                                            </div>
                                            <%}%>
                                    </div>
                                </div>

                            </div>
                        </div>
                </div>
            </div>
            </section>
            </div>
            </div>
        </main>
    </section>

    <%- include('../adminlayouts/adminfooter.ejs') %>