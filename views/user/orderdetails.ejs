                                <th></th>
                                <%if(orderData.couponPrice[0].discountedPrice != 0){%>
                                    <td class="order-list__column-total">
                                        &#x20B9;
                                        <%=orderData.couponPrice[0].discountedPrice %>
                                    </td>
                                    <%}else{%>
