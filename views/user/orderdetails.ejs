                                        <%}%>
                            </tr>
                            <tr>
                                <th style="width: 181px;">Wallet Amount</th>
                                <th></th>
                                <%if(orderData.walletAmount){%>
                                    <td class="order-list__column-total">
                                        &#x20B9;
