    <style>
         :root {
            --blue-maincolor: #00acee;
            --lightblue-accent-color: #DBF5FF;
            --darkblue-accent-color: #0092C9;
            --bg-color: white;
            --lightgray-accent-color: #DADADA;
            --main-font: Arial;
        }
        
        body,
        h1,
        h2,
        h3,
        h4,
        p {
            font: var(--main-font);
        }
        
        button {
            color: var(--blue-maincolor);
            background-color: var(--bg-color);
            font-size: 1rem;
        }
        
        #tweetSection {
            margin: 5% auto 5px auto;
            text-align: center;
            padding: 20px;
